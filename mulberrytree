#!/usr/bin/bash

function echoy
{
   COL='\033[0;33m'; NC='\033[0m'; echo -e "${COL}$@${NC}";
}

function Help
 {
    echo
    echoy "   Produce publication-quality figures based on"
    echoy "   a newick tree file and user-defined group information"
    echo
    echoy "   Usage: mulberrytree [-h|t|g|c|x|s]"
    echo "   Options:"
    echo "   h     Print this help"
    echo "   t     Input tree (Newick format)"
    echo "   g     Group information in tsv format"
    echo "           (Column 1: Leaf name; Column 2: Group name)"
    echo "   c     Color information in tsv format"
    echo "           (Column 1: Group name; Column 2: R-readable color)"
    echo "   o     Prefix for output files"
    echo "   l     Interpret group name from leaf name"
    echo "   s     Separator for group interpretation from leaf (default: \"|\")"
    echo "   x     Text or regular expression to be ignored as leaf name suffix"
    echo "   T     Number of threads (default: 1)"
    echo
}


while getopts ":ht:g:c:ls:x:T:o:" option; do
   case $option in
      h) #Display Help
         Help
         exit;;
      t) # Tree filename
         TREEFILE=$OPTARG;;
      g) # Groups filename
         GROUPFILE=$OPTARG;;
      c) # Colors filename
         COLORFILE=$OPTARG;;
      l) # Interpret group from leaf names
         NAMESFROMLEAF=1;;
      s) # Separator for group interpretation
         SEPARATOR=$OPTARG;;
      x) # Separator for group interpretation
         SUFFIX=$OPTARG;;
      T) # Separator for group interpretation
         THREADS=$OPTARG;;
      o) # Separator for group interpretation
         OUT=$OPTARG;;
      \?) # Invalid option
         echo "Invalid option: -$OPTARG"
         exit 1
         ;;

   esac
done

if [[ ! $TREEFILE ]];
   then echo "Tree file is required"
   exit 1
fi

SCRIPTPATH=$( cd -- "$(dirname "$0")" >/dev/null 2>&1; pwd -P )

COMMAND=$( echo "Rscript $SCRIPTPATH/bin/mulberrytree.R tree=$TREEFILE")

if [[ $GROUPFILE ]];
   then COMMAND=$(echo "$COMMAND groups=$GROUPFILE")
fi

if [[ $COLORFILE ]];
   then COMMAND=$(echo "$COMMAND colors=$COLORFILE")
fi

if [[ $NAMESFROMLEAF ]];
   then COMMAND=$(echo "$COMMAND groupFromName=yes")
fi

if [[ $SEPARATOR ]];
   then COMMAND=$(echo "$COMMAND sep=$SEPARATOR")
fi

if [[ $SUFFIX ]];
   then COMMAND=$(echo "$COMMAND suffix=$SUFFIX")
fi

if [[ $THREADS ]];
   then COMMAND=$(echo "$COMMAND threads=$THREADS")
fi

if [[ $OUT ]];
   then COMMAND=$(echo "$COMMAND out=$OUT")
fi

$COMMAND



exit 0;
